		"/coupons": {
			"get": {
				"tags": [
					"Coupon"
				],
				"summary": "Lấy danh sách coupon",
				"parameters": [
					{
						"name": "offset",
						"in": "query",
						"description": "Vị trí bắt đầu",
						"required": false,
						"type": "integer",
						"default": 0
					},
					{
						"name": "limit",
						"in": "query",
						"description": "Số lượng coupon",
						"required": false,
						"type": "integer",
						"default": 10
					},
					{
						"name": "code",
