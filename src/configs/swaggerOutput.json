						"description": "Thông tin coupon cần tạo",
						"required": true,
						"schema": {
							"type": "object",
							"required": [
								"code",
								"discount"
							],
							"properties": {
								"code": {
									"type": "string"
								},
								"discount": {
									"type": "number",
									"format": "float",
									"description": "Giảm giá (phần trăm hoặc số tiền)"
								},
								"type": {
									"type": "string",
									"enum": [
										"percentage",
										"amount"
									],
									"description": "Loại giảm giá"
								},
								"description": {
									"type": "string"
								},
								"expiry_date": {
									"type": "string",
									"format": "date-time"
								},
								"active": {
									"type": "boolean",
									"default": true
								}
							}
						}
					}
				],
				"responses": {
					"201": {
						"description": "Tạo coupon thành công"
					},
					"400": {
						"description": "Coupon đã tồn tại hoặc lỗi dữ liệu"
